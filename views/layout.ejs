<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Student Login System</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="canonical" href="https://getbootstrap.com/docs/4.3/examples/floating-labels/" />
    <script src="/js/jquery-3.4.1.min.js"></script>
</head>

<body>
    <header>
        <div class="container">
            <h1>Login System</h1>
            <nav class="nav">
                <ul>
                    <% if (typeof student != 'undefined' && student.name != 'undefined') { %>
                    <li><a class="nav-link active" href="/">Dashboard</a></li>
                    <li><a class="nav-link" href="/student/logout">Log out</a></li>
                    <% }else {  %>

                    <li><a class="nav-link" href="/student/login">Login</a></li>
                    <li><a class="nav-link" href="/student/register">Register</a></li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">

        <% if (typeof page != 'undefined') { %>

        <form name="mainForm" class="form-signin" method="POST" action="<%= `/student/${page}` %>">
            <div class="text-center mb-4">
                <h1 class="h2 mb-3 font-weight-normal"><%= title %></h1>
            </div>
            <% include ./partials/messages %>
            <%- body %>

        </form>

        <% }%>

        <script src="/js/popper.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>

    </div>
</body>

</html>